<div class="card">
  <div class="card-header">
    <div class="card-body">
      <h1><%= @service.date %></h1>
      <p>date de la réservation: <%= @service.date %></p>
      <p>Nom du demandeur: <%= @service.last_name %></p>
      <p>prenom du demandeur: <%= @service.first_name %></p>
      <p>Adresse débrassage: <%= @service.address %></p>
      <p>numéro de téléphone: <%= @service.phone_number %></p>
      <p>Description de la demandeur: <%= @service.description %></p>

  <!-- création du bouton edit -->
      <div class="btn-show2">
        <%= link_to "Edit", edit_service_path(@service)%>
      </div>

<!-- bouton de supression -->
    <div class="btn-show1">
      <%= link_to "Delete",
        service_path(@service),
        data: {turbo_method: :delete, turbo_confirm: "Etes-vous sure?"}%>
    </div>
