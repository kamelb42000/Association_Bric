<h1><%= @member.first_name %> <%= @member.last_name %></h1>

<% if @member.photo.attached? %>
  <%= image_tag @member.photo %>
<% end %>

<p><strong>Adresse:</strong> <%= @member.address %></p>
<p><strong>Téléphone:</strong> <%= @member.phone_number %></p>
<p><strong>Email:</strong> <%= @member.email %></p>
<p><strong>Numéro Adhérent:</strong> <%= @member.membership_number %></p>

<%= link_to 'Modifier', edit_member_path(@member) %>
<%= form_with model: @member, method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cet adhérent ?' }, class: 'inline-form' do %>
  <%= submit_tag 'Supprimer' %>
<% end %>

<h2>Réservations</h2>
<% if @bookings.any? %>
  <% @bookings.each do |booking| %>
    <p><strong>Produit:</strong> <%= booking.product.name %> - <strong>Date:</strong> <%= booking.date %></p>
  <% end %>
<% else %>
  <p>Aucune réservation trouvée.</p>
<% end %>

<h2>Services</h2>
<% if @services.any? %>
  <% @services.each do |service| %>
    <p><strong>Service:</strong> <%= service.name %> - <strong>Date:</strong> <%= service.date %></p>
  <% end %>
<% else %>
  <p>Aucun service trouvé.</p>
<% end %>
