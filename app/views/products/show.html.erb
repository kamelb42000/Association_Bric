<div class="card">
  <div class="card-header">
    <div class="card-body">
    <h1><%=  @product.name%></h1>
    <p>Prix: <%=  @product.price%></p>
    <p>Description: <%=  @product.description%></p>
     <div class="actions">
      <input type="submit" class="btn-new" value="Réservé">
    </div>
  </div>
</div>

<!-- création du bouton edit -->
<div class="btn-show2">
  <%= link_to "Edit", edit_product_path(@product)%>
</div>

<!-- bouton de supression -->
<div class="btn-show1">
  <%= link_to "Delete",
    product_path(@product),
    data: {turbo_method: :delete, turbo_confirm: "Etes-vous sure?"}%>
</div>
