<div class="card">
  <div class="card-header">
    <div class="card-body">
      <h1><%= @product.name %></h1>
      <p>Prix: <%= @product.price %></p>
      <p>Description: <%= @product.description %></p>

<!--bouton réservation   -->
      <%= form_with(model: @booking, url: product_bookings_path(@product), method: :post) do |form| %>
      <%= form.hidden_field :product_id, value: @product.id %>
      <%= form.submit "Réserver", class: "btn" %>
      <% end %>

<!-- création du bouton edit -->
      <div class="btn-show2">
        <%= link_to "Edit", edit_product_path(@product)%>
      </div>

<!-- bouton de supression -->
    <div class="btn-show1">
      <%= link_to "Delete",
        product_path(@product),
        data: {turbo_method: :delete, turbo_confirm: "Etes-vous sure?"}%>
    </div>
